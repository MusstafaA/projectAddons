<?xml version="1.0" encoding="utf-8" ?>
        <openerp>
            <data>

          <record id="action_pos_payment" model="ir.actions.act_window">
            <field name="name">Payment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pos.make.payment</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
             </record>
                <record id="list_delivery_man" model="ir.actions.act_window">
                    <field name="name">Delivery Men </field>
                    <field name="res_model">project.delivery</field>
                    <field name="view-Type">form</field>
                    <field name="view-mode">form,tree</field>
                </record>

                <menuitem id="delivery_menu" name="Delivery"/>
                <menuitem id="delivery_sub_menu" name="Delivery" parent="delivery_menu"/>
                <menuitem id="delivery_man" action="list_delivery_man" parent="delivery_sub_menu" name="Delivery Men"/>

                <record id="delivery_tree_view" model="ir.ui.view">
                    <field name="name">project_delivery_tree_view</field>
                    <field name="model">project.delivery</field>
                    <field name="arch" type="xml">
                        <tree>
                              <field name="name" />

                               <field name="status" />

                        </tree>
                    </field>
                </record>
                <record id="delivery_form_view" model="ir.ui.view">
                    <field name="name">project_delivery_form_view</field>
                    <field name="model">project.delivery</field>
                    <field name="arch" type="xml">
                        <form>
                            <sheet>
                                <div style="float:left">
                                <div style="float:left">

                                <field name="image"  class='oe_form_field_image oe_avatar' widget="image" />

                                </div>
                                <div style="float:left;padding:20px">
                                    <h1 style="color:blue;">
                                 <field name="name"  placeholder="Enter Name"/>
                                    </h1>
                                </div>
                                </div>
                                <group>


                                <group>

                                  <field name="status" />

                                </group>

                                <group>
                                    <field name="date_of_birth" placeholder="Enter Date of Birth" />
                                    <field name="email" widget="email" placeholder="Enter Email Address"/>
                                     <field name="phone_ids" >
                                         <form>
                                    <field name="phone_nu" widget="phone"/>
                                   </form>
                                    <tree editable="top">
                                     <field name="phone_nu" widget="phone"/>
                                 </tree>
                                     </field>
                                    <field name="mobile_ids" >
                                                         <form>
                                    <field name="mobile_nu" widget="phone"/>
                                   </form>
                                    <tree editable="top">
                                     <field name="mobile_nu" widget="phone"/>
                                 </tree>
                                             </field>

                                </group>
                                </group>
                                  <notebook>
                                      <page string="Latest Orders">
                                          <field name="order_ids" default_order="create_date desc"  widget="many2many" domain="[('state','=','draft')]">
                                                <tree>
                                                     <field name="name"/>

                                                    <field name="pos_reference"/>
                                                    <field name="partner_id"/>
                                                    <field name="date_order"/>
                                                    <field name="user_id"/>
                                                    <field name="invoice_id"/>
                                                    <field name="amount_total" sum="Amount total" widget="monetary"/>
                                                    <field name="company_id" groups="base.group_multi_company"/>
                                                    <field name="state"/>
                                                    <field name="session_id" />
                                                      <button name="%(action_pos_payment)d" string="Payment" class="oe_highlight" type="action" states="out" context="{'pos_session_id' : session_id}"/>
                                                       <button name="refund" string="Return Products" type="object"
                                                                   attrs="{'invisible':[('state','=','draft'),('state','=','out')]}"/>
                                              </tree>

                                          </field>
                                      </page>
                                      <page string="Notes"> <field name="notes"/></page>

                                  </notebook>
                            </sheet>
                        </form>
                    </field>
                </record>

            </data>
        </openerp>

